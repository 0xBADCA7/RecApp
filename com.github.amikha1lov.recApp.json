{
    "app-id" : "com.github.amikha1lov.recApp",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.34",
    "sdk" : "org.gnome.Sdk",
    "command" : "recapp",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=xdg-videos"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libwnck",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/libwnck/3.32/libwnck-3.32.0.tar.xz",
                    "sha256" : "9595835cf28d0fc6af5526a18f77f2fcf3ca8c09e36741bb33915b6e69b8e3ca"
                }
            ]
        },
        {
	"name" : "pulsectl",
            "buildsystem": "simple",
            "build-commands": [ "python3 ./setup.py install --prefix=/app --root=/" ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://files.pythonhosted.org/packages/source/p/pulsectl/pulsectl-20.1.2.tar.gz",
                    "sha256" : "4a97a4f7fcd8dbe56380980e8c9519ff4e26552604776cbc7555e6a14ff0202f"
                }
            ]
        },
        {
            "name" : "recapp",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {
        }
    }
}


